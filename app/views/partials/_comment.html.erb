<% if post.comments.count > 0 %>
  <% post.recent_comment.each do |comment| %>
    <p><%= comment.user.name %> : <%= comment.text%></p>
    <% if can? :destroy, @comment %>
        <%= button_to 'Delete comment', post_comment_path(comment.user, comment.post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
    <% end %>
  <% end %>
<% else %>
  <p>No comments!</p>
<% end %>